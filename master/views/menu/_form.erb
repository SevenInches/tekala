  <label for="firstname" class="col-lg-2 control-label"></label>
  <div class="col-lg-6">
    <input type="submit" value="保存" class="btn btn-success">
  </div>
</div>

<script>
  $(function(){
    var $typeInput = $('.type-input');
    if($('.type-radio:checked').val()==1){
      $typeInput.eq(0).removeAttr('disabled')
      $typeInput.eq(1).attr('disabled','disabled')
    }else{
      $typeInput.eq(0).attr('disabled','disabled')
      $typeInput.eq(1).removeAttr('disabled')
    }

    $(document).on('click','.type-radio',function(){
      if($(this).val() == 1 ){
        $typeInput.eq(1).attr('disabled','disabled')
        $typeInput.eq(0).removeAttr('disabled')
      }else{
        $typeInput.eq(0).attr('disabled','disabled')
        $typeInput.eq(1).removeAttr('disabled')
      }
    })
  })
</script>