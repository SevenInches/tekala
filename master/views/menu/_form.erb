  </div>
</div>

<div class="form-group">
  <label for="firstname" class="col-lg-2 control-label">web地址</label>
  <div class="col-lg-6">
    <%= f.text_field :route, :class => 'form-control input-xlarge input-with-feedback type-input' ,:value =>  @menu.present? ? @menu.route : '' %>
  </div>
</div>

