<div class="form-group">
  <label for="firstname" class="col-lg-2 control-label">类型</label>
  <div class="col-lg-6">
    <% if @menu.present? && @menu.config != 2 %>
      <label class="checkbox-inline">
        <input type="radio" name="user[config]" value="1" checked="" class="type-radio"> app
      </label>
      <label class="checkbox-inline">
        <input type="radio" name="user[config]" value="2" class="type-radio"> web
      </label>
    <% else %>
      <label class="checkbox-inline">
        <input type="radio" name="user[config]" value="1" class="type-radio"> app
      </label>
      <label class="checkbox-inline">
        <input type="radio" name="user[config]" value="2" checked class="type-radio"> web
      </label>
    <% end %>
  </div>
</div>

<div class="form-group">
  <label for="firstname" class="col-lg-2 control-label">app名称</label>
