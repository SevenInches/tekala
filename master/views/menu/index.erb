<div class="container-fluid" style="margin-bottom:20px">
  <div class="row">
    <form action="" class="form-horizontal" role="form">
      <div class="col-sm-2">
        <a href="/magicbox/menu/new" class="btn btn-success">添加菜单</a>
      </div>
    </form>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12" >
      <section class="panel">
        <table class="table table-striped table-hover table-condensed">
          <thead>
          <tr>
            <th>ID</th>
            <th>图标</th>
            <th>名字</th>
            <th>权重</th>
            <th>配置</th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          <% @menus.each do |item| %>
              <tr data-weight="<%= item.weight %>" data-id="<%= item.id %>">
                <td><%= item.id %></td>
                <td></td>
                <td><%= item.name %></td>
                <td>
                  <span class="btn btn-success weight-btn up">上</span>
                  <span class="btn btn-success weight-btn down">下</span>
                </td>
                <td><%= item.config_word %></td>
                <td><a href="/magicbox/menu/edit/<%= item.id %>">编辑</a>|<a href="/magicbox/menu/destory/<%= item.id %>">删除</a></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </section>
    </div>
  </div>
</div>
<script>
  $(function(){
    $(document).on('click','.weight-btn',function(){
      var $tr = $(this).closest('tr'),
          arr = [],weight;
      if($(this).hasClass('up')){
        var $last = $tr.prev(),
            $nextAll = $last.prev().length != 0 ? $last.prev().nextAll() : $('.table tbody tr');
        $tr.insertBefore($last);
        for(var i = 0;i < $nextAll.length;i++){
          var item = {};
          if(i == 0){
            weight = $tr.attr('data-weight') - 1
            item.id = $tr.attr('data-id');
            item.weight =  weight;
            $tr.attr('data-weight',weight);
          }else if(i == 1){
            weight  = parseInt($last.attr('data-weight')) + 1
            item.id = $last.attr('data-id');
            item.weight = weight;
            $last.attr('data-weight',weight);
          }else{
            item.id = $nextAll.eq(i).attr('data-id');
            item.weight = $nextAll.eq(i).attr('data-weight');
          }
          arr.push(item);
        }
      }else{
        var $next = $tr.next(),
            $nextAll = $tr.prev().length != 0 ? $tr.prev().nextAll() : $('.table tbody tr');
        $tr.insertAfter($next);
        for(var i=0;i<$nextAll.length;i++){
          var item = {};
          switch (i){
            case 0:
                weight = parseInt($tr.attr('data-weight')) + 1;
                item.id = $tr.attr('data-id');
                item.weight =  weight;
                $tr.attr('data-weight',weight);
              break;
            case 1:
              weight = parseInt($next.attr('data-weight'))-1;
              item.id = $next.attr('data-id');
              item.weight = weight;
              $next.attr('data-weight',weight);
              break;
            default :
              item.id = $nextAll.eq(i).attr('data-id');
              item.weight = $nextAll.eq(i).attr('data-weight');
          }
          arr.push(item)
        }
      }
      $.ajax({
        url : 'http://' + location.host + '/magicbox/menu/update_weight',
        type : 'post',
        data : {
          data : arr
        },
        success : function(){

        },error : function(){

        }
      })
    })
  })
</script>