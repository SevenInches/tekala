<div class="container-fluid" style="margin-bottom:20px">
  <div class="row">
    <form action="">
      <div class="col-sm-2">
        <input type="text" name="name" value="<%= params[:name] %>" class="form-control ">
      </div>
        <input type="submit" value="搜索" class="btn btn-success">
    </form>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12" >
      <section class="panel" >
        <table class="table table-condensed" >
          <thead>
          <tr style="padding:0">
            <th>ID</th>
            <th>驾校名称</th>
            <th>咨询人数</th>
            <th>学员数</th>
            <th>教练数</th>
            <th>车辆数</th>
            <th>门店数</th>
            <th>最近七天报名人数</th>
            <th>注册时间</th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          <% @schools.each do |school| %>
              <tr>
                <td><%=school.id%></td>
                <td><%=school.name%></td>
                <td><%=school.consult_count%></td>
                <td><%=school.student_count%></td>
                <td><%=school.teacher_count%></td>
                <td><%=school.car_count%></td>
                <td><%=school.shop_count%></td>
                <td><%=school.last_7days_signup_count%></td>
                <td><%=school.created_at%></td>
                <td></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <p style="padding:10px">每页5条</p>
      </section>
    </div>
  </div>
  <div class="row">
    <%= will_paginate @schools,renderer: WillPaginate::ViewHelpers::BoostrapLinkRenderer %>
  </div>
</div>