<% error = @ad.errors.key?(:channel) && @ad.errors[:channel].count > 0 %>
<div class="form-group <%= error ? 'has-error' : ''%>">
  <%= f.label '渠道', :class => 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :channel, :options => AppLaunchAd.get_channel.invert, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-block m-b-none'><%= error ? f.error_message_on(:channel) : "" %></span>
  </div>
</div>

<div class="hr-line-dashed"></div>

<% error = @ad.errors.key?(:route) && @ad.errors[:route].count > 0 %>
