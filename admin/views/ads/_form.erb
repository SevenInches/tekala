<div class="form-group <%= error ? 'has-error' : ''%>">
  <%= f.label '开始时间', :class => 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.date_field :start_time, :class => 'form-control input-xlarge input-with-feedback',:placeholder =>'格式:YYYY-MM-DD'%>
