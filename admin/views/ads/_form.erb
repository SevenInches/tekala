    <%= f.text_field :route, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-block m-b-none'><%= error ? f.error_message_on(:route) : "" %></span>
  </div>
</div>

<div class="hr-line-dashed"></div>

