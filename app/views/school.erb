<style>
  .main{
    padding-top: 30px;
    margin: 0 auto;
    padding-left: 0;
    padding-right: 0;
    background-color: white;
  }
  .header-img {
    margin: auto;
    max-width: 80%;
    margin-bottom: 40px;
    vertical-align: middle;
    display: block;
    height: auto;
  }
  .text-field {
    height: 50px;
    background-color: #fff;
    border: #ddd 1px solid;
    width: 100%;
    text-align: center;
  }
  .text-field input {
    width: 100%;
    height: 100%;
    border: 0;
    font-size: 18px;
  }
  .btn-login, .btn-login:hover {
    width: 80%;
    height: 60px;
    margin: 20px auto;
    font-size: 20px;
    margin-left: 10%;
    background-color: #5ACCFF;
    border: #03A9F4;
    color: #FFFFFF;
  }
</style>
<div class='container main'>
  <%=image_tag 'title_logo.png', :class=>'img-responsive header-img'%>
  <% form_tag url(:demo) do %>
  <div class="col-xs-12 text-field"  >
    <input type='text' name='name' value="<%=params[:name]%>" placeholder='驾校名称' />
  </div>
  <div class="col-xs-12 text-field"  >
    <input type='text' name='phone' value="<%=params[:phone]%>" placeholder='联系电话' />
  </div>
  <div class="col-xs-12 text-field"  >
    <input type='text' name='address' value="<%=params[:address]%>" placeholder='驾校地址,可不填' />
  </div>
  <div class="clear"></div>
  <br>
  <button class='btn btn-warning btn-login'>生成</button>
  <% end %>
</div>